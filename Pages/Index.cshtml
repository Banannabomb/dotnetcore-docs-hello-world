@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Calculator</title>
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h2>Calculator</h2>
        <div>
            <input type="text" id="display" readonly value="0" />
        </div>
        <div>
            <button id="btn7">7</button>
            <button id="btn8">8</button>
            <button id="btn9">9</button>
            <button id="btnDivide">/</button>
        </div>
        <div>
            <button id="btn4">4</button>
            <button id="btn5">5</button>
            <button id="btn6">6</button>
            <button id="btnMultiply">*</button>
        </div>
        <div>
            <button id="btn1">1</button>
            <button id="btn2">2</button>
            <button id="btn3">3</button>
            <button id="btnSubtract">-</button>
        </div>
        <div>
            <button id="btn0">0</button>
            <button id="btnClear">C</button>
            <button id="btnEquals">=</button>
            <button id="btnAdd">+</button>
        </div>
    </div>

    <script>
        $(function () {
            var display = $("#display");

            $("button").not("#btnClear, #btnEquals").click(function () {
                if (display.val() == "0" || display.val() == "Error") {
                    display.val($(this).text());
                }
                else {
                    display.val(display.val() + $(this).text());
                }
            });

            $("#btnClear").click(function () {
                display.val("0");
            });

            $("#btnEquals").click(function () {
                try {
                    var result = eval(display.val());
                    display.val(result);
                }
                catch (err) {
                    display.val("Error");
                }
            });
        });
    </script>
</body>
</html>